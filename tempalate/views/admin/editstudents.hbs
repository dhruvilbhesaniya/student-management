<div class="main-form">
    <h3>Edit Information</h3>
     <form class="r-form" method="post" action="/admin/updatastudents/{{alldata._id}}">
             {{!-- <h2 class="text-center">Ragistetion</h2> --}}
                
                   <div class="from1">
                    {{!-- <input type="hidden" name="_method" value="patch" /> --}}
                        <div class="col-sm-8 form-group">
                            <label for="name-f">First Name</label>
                            {{!-- <input type="hidden" name="id" value="{{alldata._id}}"> --}}
                            <input type="text" class="form-control" name="first_name" value="{{alldata.first_name}}" placeholder="Enter your first name.">
                         </div>
                     <div class="col-sm-8 form-group">
                        <label for="name-f">Midal Name</label>
                        <input type="text" class="form-control" name="midal_name" value="{{alldata.midal_name}}" id="name-f" placeholder="Enter your first name.">
                     </div>
                    </div>

                   <div class="from1">
                         <div class="col-sm-8 form-group">
                        <label for="name-l">Last name</label>
                        <input type="text" class="form-control" name="last_name" value="{{alldata.last_name}}" id="name-l" placeholder="Enter your last name.">
                    </div>
                    <div class="col-sm-8 form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="Email" value="{{alldata.Email}}" id="email" placeholder="Enter your email.">
                    </div>
                   </div>

                    <div class="from1">
                        <div class="col-sm-8 form-group">
                            <label for="address-1">Address</label>
                            <input type="address" class="form-control" name="Addres" value="{{alldata.Addres}}" id="address-1"
                            placeholder="Locality/House/Street no.">
                         </div>
                        <div class="col-sm-8 form-group">
                            <label for="Date">Date of Birth</label>
                            <input type="Date" name="date_of_birth" value="{{alldata.date_of_birth}}" class="form-control" id="Date" placeholder="">
                        </div>
                    </div>
                                 
                    

                    <div class="from1">
                            <div class="col-sm-8 form-group">
                                 <label for="sex">Gender</label>
                                <select id="sex" name="gender" value="{{alldata.gender}}" class="form-control browser-default custom-select">
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                           </div>
                        <div class="col-sm-8 form-group">
                            <label for="tel">Phone</label>
                            <input type="tel" name="phone" value="{{alldata.phone}}" class="form-control" id="tel" placeholder="Enter Your Contact Number.">
                        </div>
                    </div>

                    <div class="from1">
                            <div class="col-sm-8 form-group">
                                    <label for="Courses">Courses</label>
                                    <select  name="Courses" value="{{alldata.Courses}}" class="form-control custom-select browser-default">
                                        <option value="Bsc.it">Bsc.it</option>
                                        <option value="BCA">BCA</option>
                                        <option value="Bse">Bse</option>
                                        <option value="B.com">B.com</option>
                                        <option value="BBA">BBA</option>
                                    </select>
                             </div>
